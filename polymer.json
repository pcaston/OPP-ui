{
  "entrypoint": "index.html",
  "shell": "src/entrypoints/app.js",
  "fragments": [
    "src/panels/config/op-panel-config.js",
    "src/panels/dev-event/op-panel-dev-event.js",
    "src/panels/dev-info/op-panel-dev-info.js",
    "src/panels/dev-mqtt/op-panel-dev-mqtt.js",
    "src/panels/dev-service/op-panel-dev-service.js",
    "src/panels/dev-state/op-panel-dev-state.js",
    "src/panels/dev-template/op-panel-dev-template.js",
    "src/panels/history/op-panel-history.js",
    "src/panels/iframe/op-panel-iframe.js",
    "src/panels/kiosk/op-panel-kiosk.js",
    "src/panels/logbook/op-panel-logbook.js",
    "src/panels/map/op-panel-map.js",
    "src/panels/shopping-list/op-panel-shopping-list.js",
    "src/panels/mailbox/op-panel-mailbox.js",
    "oppio/src/entrypoint.js"
