  "sources": ["src/**/*", "!src/translations/*"],
  "lint": {
    "rules": ["polymer-3"],
    "ignoreWarnings": ["could-not-resolve-reference", "could-not-load"],
    "filesToIgnore": [
      "**/*.html",
      "**/src/panels/config/js/**/*.js",
      "**/op-paper-slider.js",
      "**/op-iconset-svg.js",
      "**/op-script-editor.js",
      "**/op-automation-editor.js",
      "**/op-big-calendar.js"
    ]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    }
  ]
}
